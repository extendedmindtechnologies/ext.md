<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <fileSets>
  	<fileSet>
      <directory>${project.build.directory}/extendedmind-frontend-site/docker</directory>
      <outputDirectory>/app/etc-init</outputDirectory>
      <includes>
        <include>etc-init.sh</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${project.build.directory}/filtered-resources</directory>
      <outputDirectory>/app/etc-init/etc/nginx/sites-enabled/dashboard</outputDirectory>
      <includes>
        <include>nginx.dashboard.conf</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${project.build.directory}/filtered-resources</directory>
      <outputDirectory>/app/etc-init/etc/nginx/sites-enabled/site</outputDirectory>
      <includes>
        <include>nginx.extendedmind.conf</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${project.build.directory}/filtered-resources</directory>
      <outputDirectory>/app/etc-init/etc/piwik/templates</outputDirectory>
      <includes>
        <include>piwik.config.ini.php</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${project.build.directory}/fiak-site-config</directory>
      <outputDirectory>/app/etc-init/etc/nginx/sites-enabled/fiak-site</outputDirectory>
      <includes>
        <include>nginx.filosofianakatemia.conf</include>
      </includes>
    </fileSet>
  </fileSets>
</assembly>
