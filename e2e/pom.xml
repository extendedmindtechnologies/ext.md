                </ports>
              </run>
            </image>
            <image>
              <name>extendedmind/backend-backup</name>
              <alias>backend-backup</alias>
              <run>
                <namingStrategy>alias</namingStrategy>
                <links>
                  <link>backend:backend</link>
                </links>
              </run>
            </image>
            <image>
              <name>extendedmind/sync-folder</name>
              <alias>sync-folder</alias>
              <run>
                <namingStrategy>alias</namingStrategy>
