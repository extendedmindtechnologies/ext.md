                <volumes>
                  <from>
                    <image>nginx-conf</image>
                    <image>frontend-data</image>
                    <image>piwik</image>
                  </from>
                </volumes>
                <links>
                  <link>backend:backend</link>
                  <link>site:site</link>
                  <link>piwik:piwik</link>
